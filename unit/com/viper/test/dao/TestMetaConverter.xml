			<!-- <column name="STRUCT_TYPE" java-type="STRUCT"/> -->
			<!-- <column name="ARRAY_TYPE" java-type="ARRAY"/> -->
			<!-- <column name="REF_TYPE" java-type="REF"/> -->
		</table>
	</database>
</databases>